{% extends "layout.jinja2" %}

{% block pagestyles %}
    <link href="{{ url_for('static', filename='dist/css/dashboard.css') }}" rel="stylesheet" type="text/css">
    <link rel="stylesheet" href="https://use.typekit.net/sus7rlu.css">
{% endblock %}

{% block nav %}
    <nav style="position:absolute; top:20px; right:20px;">
        <a href="{{ url_for('main.session_view') }}" style="color:white">Session test</a>
    </nav>
{% endblock %}

{% block content %}
    <h1>{{ body }}</h1>

    {% if current_user.is_authenticated %}
        <p>Hi {{ current_user.name }}!</p>
        <a href="{{ url_for('main.logout') }}">Log out</a>
    {% endif %}
{% endblock %}
